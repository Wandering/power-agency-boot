                </if>
			                <!--  -->
                <if test="updateBy!=null and updateBy.trim()!=null">
                    AND update_by = #{updateBy}
                </if>
			        </where>
        <choose>
            <when test="sidx != null and sidx.trim() != ''">
                order by ${sidx} ${order}
            </when>
			<otherwise>
                order by id desc
			</otherwise>
        </choose>
		<if test="offset != null and limit != null">
			limit #{offset}, #{limit}
		</if>
	</select>
	
