	<insert id="save" parameterType="com.power.entity.PowerModelEntity" useGeneratedKeys="true" keyProperty="id">
		insert into power_model
		(
			`model`, 
			`capacity`, 
			`core_type`, 
			`input_current`, 
			`output_current`, 
			`input_voltage`, 
			`output_voltage`, 
			`authentication`, 
			`size`, 
			`isNFC`, 
			`charge_line`, 
			`manufacturer`, 
			`create_dt`, 
			`update_dt`, 
			`create_by`, 
			`update_by`
		)
		values
