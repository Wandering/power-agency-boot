	<select id="queryList" resultType="HashMap" resultMap="agenciesMap">
		SELECT agency.*,sysuser.username,sysuser.email FROM agencies agency 
		LEFT JOIN sys_user sysuser ON agency.abbr_code = sysuser.user_id
