			`name`, 
			`abbr_code`, 
			`region`, 
			`address`, 
			`status`, 
			`type`, 
			`parent`, 
			`create_dt`, 
			`update_dt`, 
			`create_by`, 
			`update_by`, 
			`agencytype`, 
			`business_no`, 
			`business_img`, 
			`open_bank`, 
			`bankname`, 
			`bank_cardno`, 
			`legaluser_name`, 
			`legaluser_no`, 
			`legaluser_img`, 
			`qrcode`, 
			`agency_pool`, 
			`agencyrole`, 
			`contract_startDt`, 
			`contract_endDt`
		)
		values
