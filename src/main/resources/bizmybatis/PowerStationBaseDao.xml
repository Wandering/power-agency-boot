                <if test="facilitatorId != null and facilitatorId.trim() != ''">
                    AND facilitator_id = #{facilitatorId}
                </if>
			                <!-- 充电桩槽位 -->
                <if test="slotNo != null and slotNo.trim() != ''">
                    AND slot_no = #{slotNo}
                </if>
